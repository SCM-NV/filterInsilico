{
    "$schema": "http://json-schema.org/draft-04/schema",
    "description": "Input to run a given workflow",
    "type": "object",
    "properties": {
	"name": {
	    "type": "string",
	    "description": "Workflow name"
	},
	"file_molecules": {
	    "type": "string",
	    "description": "Path to the file containing the molecules"
	},
	"steps": {
	    "type": "array",
	    "description": "Filters and/or molecular properties to compute",
	    "items": {
		"anyOf": [
		    {"$ref": "schemas/apply_filter.json"},
		    {"$ref": "schemas/compute_property.json"},
		    {"$ref": "schemas/search_property.json"}
		]
	    }
	}
    },
    "additionalProperties": false,
    "required": [
	"file_molecules",
	"steps"
  ]
}
