{
    "$schema": "http://json-schema.org/draft-04/schema",
    "description": "Filters to apply",
	"apply_filter": {
	    "type": "object",
	    "description": "Filter to apply to the molecule collection",
	    "additionalProperties": false,
	    "properties": {
		"id": {
		    "type": "integer",
		    "description": "job identifier"
		},
		"depends_on": {
		    "type": "integer",
		    "description": "Identifiers of the other tasks that the current job depends on"
		},
		"filters": {
		    "type": "object",
		    "properties" : {
			"functional_groups": {
			    "type": "object",
			    "description": "functional groups to filter",
			    "properties": {
				"smiles": {
				    "type": "array",
				    "description": "smile of the functional group",
				    "items": {
					"type": "string"
				    }
				}
			    },
			    "required": ["smiles"]
			}
		    },
		    "required": ["functional_groups"]
		}		
	    },
	    "required": ["filters", "id"]
	}
}
